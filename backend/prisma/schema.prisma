generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS PARA SEGURIDAD DE DATOS ---

enum UserRole {
  ADMIN
  DEVELOPER
  MANAGER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

// --- MODELOS ---

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  password     String
  name         String
  phone        String?
  city         String?
  avatar       String?   // Ruta de la foto
  role         UserRole  @default(DEVELOPER) // Uso de Enum
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  projects     Project[]
  members      ProjectMember[]
}

model Project {
  id           String    @id @default(cuid())
  name         String
  description  String?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  ownerId      String    // Cambiado a String para coincidir con User.id
  owner        User      @relation(fields: [ownerId], references: [id])
  
  requirements Requirement[]
  members      ProjectMember[]
}

model Requirement {
  id           String    @id @default(cuid())
  title        String
  description  String    @db.Text
  priority     Priority  @default(LOW) // Uso de Enum
  
  projectId    String    // Cambiado a String para coincidir con Project.id
  project      Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

// Tabla para simular colaboradores en un proyecto
model ProjectMember {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      String   @default("COLLABORATOR") // Para simular roles internos
  joinedAt  DateTime @default(now())

  @@unique([projectId, userId])
}